<h3>Donation menu</h3>
<br>
<h4>Sent donations</h4>
<% current_user.donations.each do |donation| %>
<div class="container-donation">
  <div class="donation-card">
    <div class="donation-card-name" ><%= donation.project.name.capitalize %></div>
    <div class="donation-card-amount" >Amount offered: <%= donation.amount %></div>
    <div class="donation-card-status" >Status: <%= donation.status %></div>
  </div>
</div>
<% end %>



<h4> Donation received </h4>
<% current_user.projects.each do |project| %>
<% unless project.donations.count.zero? %>
<div class="container-donation">
  <div class="project-donation-row">
    <div class="donation-card-name" ><%= project.name.capitalize %></div>
    <% project.donations.each do |donation| %>
    <div class="donation-received-details">
      <div class="donation-card-amount" >Amount offered: <%= donation.amount %></div>
      <% if donation.status == 'pending' %>
      <div class="donation-card-status"> <%= render partial: 'donations/donation-status-form', locals: {project: donation.project, donation: donation} %> </div>
      <% else %>
      <div class="donation-card-status" >Status: <%= donation.status %></div>
      <% end %>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
<% end %>
